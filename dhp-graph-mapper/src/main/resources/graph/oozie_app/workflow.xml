<workflow-app name="import_infospace_graph" xmlns="uri:oozie:workflow:0.5">
    <parameters>
        <property>
            <name>hive_db_name</name>
            <description>the target hive database name</description>
        </property>
    </parameters>

    <start to="MapGraphIntoDataFrame"/>

    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <action name="Create DB - Step 1">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <script>/eu/dnetlib/dhp/graph/hive/step1.sql</script>
            <param>hive_db_name=${hive_db_name}</param>
        </hive>
        <ok to="End"/>
        <error to="Kill"/>
    </action>

    <end name="End"/>
</workflow-app>
